<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="kr.co.dongduk.medineye.activity.AlarmDialogActivity">

    <FrameLayout
        android:id="@+id/popuplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="29dp"
            android:background="@drawable/background_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_exist">

            <ImageView
                android:id="@+id/img1"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="110dp"
                android:src="@drawable/img_pill_one"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/line"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_width="11dp"
                android:layout_height="4dp"
                android:layout_below="@+id/img1"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/txt_memo"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/textColor_w"
                android:gravity="center"
                android:text="타이레놀"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line" />
            <Button
                android:layout_alignParentBottom="true"
                android:textSize="30dp"
                android:background="@drawable/background_main"
                android:text="알람 확인"
                android:textColor="@color/textColor_w"
                android:gravity="center"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/btn"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>

