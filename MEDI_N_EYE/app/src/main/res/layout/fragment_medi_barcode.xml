<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="kr.co.dongduk.medineye.fragment.Medi_Barcode_Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="29dp"
        android:background="@drawable/background_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medi_barcode"
            android:textStyle="bold"
            android:textColor="@color/textColor_w"
            android:textSize="40sp"/>


        <ImageView

            android:layout_marginTop="43dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_barcode"
            android:layout_width="170dp"
            android:layout_height="150dp" />

        <TextView
            android:layout_marginTop="43dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medi_barcode_ex"
            android:textStyle="bold"
            android:textColor="@color/textColor_w"
            android:textSize="30sp"/>
    </LinearLayout>
</FrameLayout>