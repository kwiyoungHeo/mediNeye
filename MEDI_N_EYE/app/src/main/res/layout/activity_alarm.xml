<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="kr.co.dongduk.medineye.activity.AlarmActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="29dp"
            android:onClick="onClick"
            android:background="@drawable/background_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_exist">

            <ImageView
                android:id="@+id/img1"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/img_pill_one"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/line"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_width="11dp"
                android:layout_height="4dp"
                android:layout_below="@+id/img1"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/txt_memo"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/textColor_w"
                android:gravity="center"
                android:text="타이레놀"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_info"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/textColor_w"
                android:gravity="center"
                android:text="PM 7:20"
                android:textSize="40dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_memo" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_repeat"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/textColor_w"
                android:gravity="center"
                android:text="매일"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_info" />
            <Button
                android:layout_alignParentBottom="true"
                android:textSize="30dp"
                android:background="@drawable/background_main"
                android:text="알람 삭제"
                android:textColor="@color/textColor_w"
                android:gravity="center"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/btn"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="29dp"
            android:background="@drawable/frame_dot"
            android:id="@+id/layout_none">

            <ImageView
                android:id="@+id/img"
                android:layout_marginTop="100dp"
                android:src="@drawable/img_alarm_add"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_below="@+id/img"
                android:layout_marginTop="80dp"
                android:gravity="center_horizontal"
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm_main_none"
                android:textStyle="bold"
                android:textColor="@color/textColor_w"
                android:textSize="35sp"/>

            <Button
                android:background="@null"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn2"/>
        </RelativeLayout>
    </FrameLayout>
 </RelativeLayout>
